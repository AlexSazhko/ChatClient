<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alexsazhko.chatclient" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ChatApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ContactActivity"
            android:label="@string/title_activity_contact" >
        </activity>
        <activity
            android:name=".ui.ChatRoomActivity"
            android:label="@string/title_activity_chat_room" >
        </activity>
        <activity
            android:name=".preference.PrefActivity"
            android:label="@string/title_activity_chat_room" >
        </activity>
        <activity
            android:name=".ui.AddContactActivity"
            android:label="@string/title_activity_add_contact" >
        </activity>
    </application>

</manifest>
